extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back To Projects

  #contact-sidebar
    span.icon-chevron-thin-right.close-contact-sidebar

    button.contact-form-btn
      span.icon-mail  Email Me
    .contact.social-icons
        span.icon-github
        span.icon-linkedin
        span.icon-twitter
    .social-info
      .github
        span.icon-github
        h3 GitHub
        a.github-button(href='https://github.com/jsbard' data-color-scheme='no-preference: light; light: light; dark: dark;' data-size='large' aria-label='Follow @jsbard on GitHub') Follow @jsbard
      .linkedin
          span.icon-linkedin
          h3 LinkedIn
          a(href="https://linkedin.com/in/andrewbhickman" target="_blank")
            button.linkedin-button
              span.icon-linkedin   Connect on LinkedIn
      .twitter
        span.icon-twitter
        h3 Twitter
        a.twitter-follow-button(href='https://twitter.com/imreallyandrew?ref_src=twsrc%5Etfw' data-show-count='false' data-size="large") Follow @imreallyandrew

    form#contact-form-email
      label(for="name") Your Name:
      input(type="text" id="name" name="name" required)
      label(for="email") Email Address:
      input(type="email" id="email" name="email" required)
      label(for="email-body") How Can I Help You Today?
      textarea(maxlength="500" id="email-body" name="email-body" required)
      button.submit(type="submit" action="/contact-email" method="POST") Submit

    h3.email-form-submitted I received your message! Thank you, and I will be in touch soon.

