extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back To Projects

  #contact-sidebar
    span.icon-chevron-thin-right.close-contact-sidebar
    .contact.social-icons
        span.icon-github
        span.icon-linkedin
        span.icon-twitter
    .social-info
      .github
        span.icon-github
        h3 GitHub
        a.github-button(href='https://github.com/jsbard' data-color-scheme='no-preference: light; light: light; dark: dark;' data-size='large' aria-label='Follow @jsbard on GitHub') Follow @jsbard
      .linkedin
          span.icon-linkedin
          h3 LinkedIn
          a(href="https://linkedin.com/in/andrewbhickman" target="_blank")
            button.linkedin-button Connect on LinkedIn
      .twitter
        span.icon-twitter
        h3 Twitter
        a.twitter-follow-button(href='https://twitter.com/imreallyandrew?ref_src=twsrc%5Etfw' data-show-count='false' data-size="large") Follow @imreallyandrew

    form#contact-form-email
      label(for="name") Your Name:
      input(type="text" id="name" name="name")
      label(for="email") Email Address:
      input(type="email" id="email" name="email")
      label(for="email-body") How Can I Help You Today?
      textarea(maxlength="500" id="email-body" name="email-body")
      button.submit(type="submit" action="/contact" method="POST") Submit

    form#contact-form-text
      label(for="phone") Phone Number:
      input(type="tel" id="phone" name="phone")
      label(for="sms-body") How Can I Help You Today?
      textarea(maxlength="500" id="sms-body" name="sms-body")

  article.portfolio-about
    .inner-wrapper.flex-row-wrap.two-col
      .about-intro-box

        img.about-img(src='/static/images/profile-running.jpg', alt='')

        h1 Andrew Hickman

        p Full Stack JavaScript Developer


        .about-bio
          p Seeking to put my passion for full-stack JavaScript development and technology in the service of creating engaging online experiences. I look forward to applying my previous work and volunteer experience in digital marketing and retail to a new career in tech.

      .skills-contact-box.box
        button.contact-toggle Toggle
        h6 Skills

        ul
          li React
          li React Router
          li Axios, Fetch, and Public APIs
          li Express
          li Pug
          li Node.js
          li Git and GitHub
          li Object Oriented Programming
          li Visual Studio
          li Accessibility
          li JavaScript
          li HTML
          li CSS

        h6 Contact

        ul
          li hello@andrewhickman.me

    nav.nav
      a(href='/')
        span &larr;
        |  Back To Projects